{
  "rotationDuration": 5000,
  "transitionAnimation": "fadeSlide",
  "colors": {
    "panelBackground": "#F3F3F3",
    "panelBorder": "#002740",
    "primaryText": "#002740",
    "secondaryText": "#666666",
    "progressBarBackground": "#E0E0E0",
    "progressBarFill": "#002740",
    "progressBarFillEnd": "#004d73",
    "accentColor": "#9146ff"
  },
  "youtubeChannel": {
    "url": "",
    "latestVideoTitle": "Latest Stream Highlights",
    "latestVideoDate": "10/12/2025"
  },
  "chatCommands": [
    {
      "name": "!discord",
      "description": "Join our Discord server",
      "emote": "discord.png"
    },
    {
      "name": "!vod",
      "description": "Watch latest stream",
      "emote": "vod.png"
    }
  ],
  "elements": [
    {
      "id": "followerGoal",
      "type": "progress",
      "enabled": true,
      "title": "Follower Goal",
      "subtitle": "",
      "emote": "follower.png",
      "zIndex": 1,
      "dataSource": "twitch.followers",
      "fields": {
        "goal": 200,
        "current": 0,
        "showPercentage": true
      }
    },
    {
      "id": "subscriberGoal",
      "type": "progress",
      "enabled": true,
      "title": "Subscriber Goal",
      "subtitle": "",
      "emote": "subscriber.png",
      "zIndex": 2,
      "dataSource": "twitch.subscribers",
      "fields": {
        "goal": 500,
        "current": 0,
        "showPercentage": true
      }
    },
    {
      "id": "donations",
      "type": "counter",
      "enabled": true,
      "title": "Total Donations",
      "subtitle": "Thank you for your support!",
      "emote": "donation.png",
      "zIndex": 3,
      "dataSource": "custom.donations",
      "fields": {
        "value": 0,
        "prefix": "$",
        "suffix": ""
      }
    },
    {
      "id": "chatCommands",
      "type": "list",
      "enabled": true,
      "title": "Chat Commands",
      "subtitle": "",
      "emote": "",
      "zIndex": 4,
      "dataSource": "config.chatCommands",
      "fields": {
        "maxItemsToShow": 3,
        "showAsCarousel": true
      }
    },
    {
      "id": "latestVOD",
      "type": "info",
      "enabled": true,
      "title": "Latest VOD",
      "subtitle": "Type !vod or !youtube in chat",
      "emote": "ðŸŽ¬",
      "zIndex": 5,
      "dataSource": "twitch.vods",
      "fields": {
        "showThumbnail": false,
        "text": "Latest Stream Highlights",
        "subtext": ""
      }
    }
  ]
}
